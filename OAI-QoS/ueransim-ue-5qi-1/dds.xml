<?xml version="1.0" encoding="UTF-8" ?>
<profiles xmlns="http://www.eprosima.com/XMLSchemas/fastRTPS_Profiles.xsd">
    <!-- Transport Descriptors for UDP -->
    <transport_descriptors>
        <transport_descriptor>
            <transport_id>CustomUDPTransport</transport_id>
            <type>UDPv4</type>
            <interfaceWhiteList>
                <address>12.1.1.10</address> <!-- IP of Container 1 on tun0 -->
            </interfaceWhiteList>
        </transport_descriptor>
    </transport_descriptors>

    <!-- Participant Profile for Container 2 -->
    <participant profile_name="CustomUDPTransportParticipant" is_default_profile="true">
        <rtps>
            <!-- User Transport Definition -->
            <userTransports>
                <transport_id>CustomUDPTransport</transport_id>
            </userTransports>
            <useBuiltinTransports>false</useBuiltinTransports>
            <builtin>
                  <avoid_builtin_multicast>true</avoid_builtin_multicast>          
            </builtin>  
        </rtps>
    </participant>
</profiles>
